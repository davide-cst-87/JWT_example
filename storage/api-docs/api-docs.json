    "components": {
        "schemas": {
            "Scan": {
                "title": "Scan",
                "description": "Represents a user scan event",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "badge_id": {
                        "type": "string",
                        "example": "ABC123XYZ"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "entrance",
                            "exit"
                        ],
                        "example": "entrance"
                    },
                    "notes": {
                        "type": "string",
                        "example": "Came in late",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-03-30 00:51:44"
                    },
                    "user": {
                        "properties": {
                            "id": {
                                "type": "string",
                                "example": "41"
                            },
                            "name": {
                                "type": "string",
                                "example": "Mario"
                            },
                            "surname": {
                                "type": "string",
                                "example": "Rossi"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
